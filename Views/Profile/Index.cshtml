@model WSCamera.Models.customer

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.success != null)
            {
                <p class="alert alert-success">@ViewBag.success</p>
            }
            @if (ViewBag.error != null)
            {
                <p class="alert alert-danger">@ViewBag.error</p>
            }
            <h3 style="margin-top: 30px;margin-bottom: 10px;">Thông tin tài khoản</h3>
            @using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="editlabel">First name: </label>
                    @Html.TextBoxFor(x => x.first_name, new { @class = "form-control", @Value = Model.first_name, required = string.Empty, @placeholder = "First name" })
                </div>
                <div class="form-group">
                    <label class="editlabel">Last name: </label>
                    @Html.TextBoxFor(x => x.last_name, new { @class = "form-control", @Value = Model.last_name, required = string.Empty, @placeholder = "Last name" })

                </div>
                <div class="form-group">
                    <label class="editlabel">Email: </label>
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control", @Value = Model.email, required = string.Empty, @placeholder = "Email", @type = "email", @readonly = string.Empty })

                </div>
                <div class="form-group">
                    <label class="editlabel">Phone: </label>
                    @Html.TextBoxFor(x => x.phone, new { @class = "form-control", @Value = Model.phone, required = string.Empty, @placeholder = "Phone Number", @type = "tel" })

                </div>
                <div class="form-group">
                    <label class="editlabel">Street</label>
                    @Html.TextBoxFor(x => x.street, new { @class = "form-control", @Value = Model.street, required = string.Empty, @placeholder = "Địa chỉ giao hàng", @type = "text" })

                </div>
                <div class="form-group">
                    <label class="editlabel">City</label>
                    @Html.TextBoxFor(x => x.city, new { @class = "form-control", @Value = Model.city, required = string.Empty, @placeholder = "City", @type = "text" })

                </div>
                <div class="form-group">
                    <label class="editlabel">Zip code</label>
                    @Html.TextBoxFor(x => x.zip_code, new { @class = "form-control", @Value = Model.zip_code, required = string.Empty, @placeholder = "Mã Bưu Điện", @type = "text" })
                </div>
                <p style="width: 100%; margin-top: 3%;"><a href="/" style="padding: 10px 30px; background: #FF5C00; color:#fff;">Quay lại</a><button type="submit" name="submit" style="padding: 10px 30px; background: #FF5C00; color:#fff; float: right; border:none;color:#fff"><a>Update</a></button></p>
            }
        </div>
    </div>
</div>
