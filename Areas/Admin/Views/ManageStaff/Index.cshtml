
@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model PagedList.IPagedList<WSCamera.Models.staff>
@using PagedList.Mvc;

<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget">
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>Quản lý nhân viên</h4>

                    </div>
                    @Html.Partial("./_Create")
                    @Html.Partial("./_Edit")

                    <div class="widget-body ShowStaff">
                        <button class="btn btn-success" id="openCreateStaff">Create</button> &nbsp;&nbsp;
                    </div>
                    <div class="widget-body ShowStaff">
                        <table class="table table-striped table-bordered" id="sample_1">
                            <thead>
                                <tr>

                                    <th>#</th>
                                    <th class="hidden-phone">Họ và tên</th>
                                    <th>role</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Trạng thái</th>
                                    <th>Chỉnh sửa</th>
                                </tr>
                            </thead>
                            <tbody class="ManageStaff">
                                @foreach (var item in Model)
                                {
                                    <tr data-id="@item.staff_id">
                                        <td>@item.staff_id</td>
                                        <td>@item.display_name</td>
                                        <td>@item.role</td>
                                        <td>@item.phone</td>
                                        <td>@item.email</td>

                                        @if (item.active == true)
                                        {
                                            <td>Active</td>
                                        }
                                        else
                                        {
                                            <td>Not Active</td>
                                        }
                                        <td><a class="templatemo-link ShowEditStaff" data-id="@item.staff_id"><i class="fa fa-pencil fa-fw"></i>Edit</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("ManageStaff", new { page, pageSize = Model.PageSize }))
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
