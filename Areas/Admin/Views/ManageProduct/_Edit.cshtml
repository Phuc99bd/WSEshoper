
@{
    Layout = null;
}

<div class="col-sm-8 EditProduct" style="display:none;margin:15px;">
    <div class="form-group">
        <h3>Edit Product</h3>
    </div>
    <div class="form-group">
        <input type="text" placeholder="" class="form-control" id="idEdProduct" required="" readonly />
    </div>
    <div class="form-group">
        <input type="text" placeholder="Name Category" class="form-control" id="nameEditProduct" required="" />
    </div>
    <div class="form-group">
        <select class="form-control" id="idEditProduct"></select>
    </div>
    <div class="form-group">
        <input type="text" placeholder="Quantity" class="form-control" id="quantityEditProduct" required="" />
    </div>
    <div class="form-group">
        <input type="text" placeholder="Price" class="form-control" id="priceEditProduct" required="" />
    </div>
    <div class="form-group">
        <select class="form-control" id="statusProduct">
            <option value="true">Active</option>
            <option value="false">Not active</option>
        </select>
    </div>
    <div class="form-group">
        <div id="exampleEdit" style="width:60%;"></div>
    </div>
    <div class="form-group">
        <input type="file" id="uploadFileEditProduct" class="form-control" />

    </div>
    <div class="form-group">
        <img src="" class="previewEditProduct" width="100" height="100" />
    </div>
    <button class="btn btn-primary backShowProduct">Back</button>&nbsp;&nbsp; <button class="btn btn-success" data-id="" id="UpdateProduct">Update</button>
</div>

