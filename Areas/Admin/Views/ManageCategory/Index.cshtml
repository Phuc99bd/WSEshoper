
@{
    ViewBag.Title = "Quản lý loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model PagedList.IPagedList<WSCamera.Models.category>
@using PagedList.Mvc;

<div id="main-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget">
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>Quản lý loại sản phẩm</h4>

                    </div>
                    @Html.Partial("./_Create")
                    @Html.Partial("./_Edit")
                
                    <div class="widget-body ShowCategory">
                        <button class="btn btn-success" id="openCreateCategory">Create</button> &nbsp;&nbsp;
                    </div>
                    <div class="widget-body ShowCategory">
                        <table class="table table-striped table-bordered" id="sample_1">
                            <thead>
                                <tr>

                                    <th>#</th>
                                    <th class="hidden-phone">Tện loại sản phẩm</th>          
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody class="ManageCategory">
                           
                                @foreach (var category in Model)
                                {
                                    <tr data-id="@category.category_id">
                                        <td>@category.category_id</td>
                                        <td>@category.category_name</td>
                                        <td><a class="templatemo-link ShowCategory" data-id="@category.category_id"><i class="fa fa-pencil fa-fw"></i>Edit</a></td>
                                        <td><a class="templatemo-link DeleteCategory" data-id="@category.category_id">Delete</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("ManageCategory", new { page, pageSize = Model.PageSize }))
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

